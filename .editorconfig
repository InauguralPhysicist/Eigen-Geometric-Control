# .editorconfig - Maintains consistent coding styles across different editors
# Most modern editors support this automatically (VS Code, PyCharm, Sublime, etc.)
# See https://editorconfig.org for more information

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 100

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false  # Allow two trailing spaces for line breaks

# Configuration files
[{.flake8,*.ini}]
indent_style = space
indent_size = 4
